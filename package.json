{
  "name": "voice-recorder",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm ./public/javascripts/bundle.js ./public/javascripts/bundle.js.map",
    "build:dev": "npm run clean; NODE_ENV=dev webpack --config webpack.config.dev.js",
    "build:prod": "npm run clean; NODE_ENV=production webpack --config webpack.config.prod.js",
    "launch:server:dev": "nodemon ./bin/www",
    "start:dev": "npm-run-all --parallel build:dev launch:server:dev",
    "start": "node ./bin/www",
    "test": "jest"
  },
  "dependencies": {
    "@types/classnames": "^2.2.3",
    "@types/d3": "^5.0.0",
    "@types/pretty-bytes": "^4.0.0",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-helmet": "^5.0.4",
    "@types/react-redux": "^5.0.14",
    "@types/react-router-dom": "^4.2.3",
    "@types/shortid": "0.0.29",
    "body-parser": "~1.18.2",
    "bulma": "^0.6.2",
    "classnames": "^2.2.5",
    "cookie-parser": "~1.4.3",
    "d3": "^4.13.0",
    "debug": "~2.6.9",
    "dexie": "^2.0.1",
    "express": "~4.15.5",
    "moment": "^2.20.1",
    "morgan": "~1.9.0",
    "pretty-bytes": "^4.0.2",
    "pug": "2.0.0-beta11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "recordrtc": "^5.4.6",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "serve-favicon": "~2.4.5",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "awesome-typescript-loader": "^3.4.1",
    "css-loader": "^0.28.9",
    "jest": "^22.3.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.15.0",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.1",
    "ts-jest": "^22.0.4",
    "tslint": "^5.8.0",
    "typescript": "^2.7.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
