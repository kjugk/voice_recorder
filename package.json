{
  "name": "voice-recorder",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:all:prod": "NODE_ENV=production npm-run-all build:server:prod build:client:prod",
    "build:client:dev": "NODE_ENV=dev webpack --config webpack.config.dev.js",
    "build:client:prod": "NODE_ENV=production webpack --config webpack.config.prod.js",
    "build:server:dev": "NODE_ENV=dev tsc --w --p server/tsconfig.json",
    "build:server:prod": "NODE_ENV=production tsc --p server/tsconfig.json",
    "launch:server:dev": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "start:dev": "npm-run-all --parallel build:server:dev build:client:dev launch:server:dev",
    "test": "jest"
  },
  "dependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "body-parser": "~1.18.2",
    "bulma": "^0.6.2",
    "classnames": "^2.2.5",
    "cookie-parser": "~1.4.3",
    "d3": "^4.13.0",
    "debug": "~2.6.9",
    "dexie": "^2.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.2",
    "moment": "^2.20.1",
    "morgan": "~1.9.0",
    "pretty-bytes": "^4.0.2",
    "pug": "2.0.0-beta11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "recordrtc": "^5.4.6",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "serve-favicon": "~2.4.5",
    "shortid": "^2.2.8",
    "webpack-shell-plugin": "^0.5.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/cookie-parser": "^1.4.1",
    "@types/d3": "^5.0.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.2",
    "@types/morgan": "^1.7.35",
    "@types/pretty-bytes": "^4.0.0",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-helmet": "^5.0.4",
    "@types/react-redux": "^5.0.14",
    "@types/react-router-dom": "^4.2.3",
    "@types/shortid": "0.0.29",
    "awesome-typescript-loader": "^3.4.1",
    "clean-webpack-plugin": "^0.1.18",
    "css-loader": "^0.28.9",
    "gulp": "^3.9.1",
    "jest": "^22.3.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.15.0",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.1",
    "sw-precache": "^5.2.1",
    "ts-jest": "^22.0.4",
    "tslint": "^5.8.0",
    "typescript": "^2.7.1",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./client/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
